@using SchoolWeb.Models
@model List<ClassPO>

@{
    ViewBag.Title = "ViewAllClasses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
</head>

<body>
    <h2>All Classes</h2>
    @if (Session["RoleID"] != null && ((int)Session["RoleID"] == (int)SchoolWeb.Models.Roles.Admin || (int)Session["RoleID"] == (int)SchoolWeb.Models.Roles.Manager))
    {
        @Html.ActionLink("Create new Class", "CreateClass", "Class", new { @class = "btn btn-primary" })
    }
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Grade
                </th>
                <th>
                    Group
                </th>
                <th>
                    Name
                </th>
                <th>
                    Class Teacher
                </th>
                <th>
                    Class President
                </th>
                <th>
                    About
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (ClassPO classPO in Model)
            {

                <tr>
                    <td>
                        @classPO.Grade
                    </td>
                    <td>
                        @classPO.Group
                    </td>
                    <td>
                        @classPO.Name
                    </td>
                    <td>
                        @classPO.ClassTeacher
                    </td>
                    <td>
                        @classPO.ClassPresident
                    </td>
                    <td>
                        @classPO.About
                    </td>
                    @if (Session["RoleID"] != null && ((int)Session["RoleID"] == (int)SchoolWeb.Models.Roles.Admin || (int)Session["RoleID"] == (int)SchoolWeb.Models.Roles.Manager))
                    {
                        <td>
                            @Html.ActionLink("Update", "UpdateClass", "Class", new { classID = classPO.ClassID }, new { @class = "btn btn-primary" })
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "DeleteClass", "Class", new { classID = classPO.ClassID }, new { @class = "btn btn-danger" })
                        </td>
                    }
                </tr>
            }
        </tbody>
        <tfoot></tfoot>
    </table>
</body>
